/* landing page */
.landing {
  background: url(<%= asset_path 'bg/progress-bg.png' %>);
}

.landing .rnd-btn {
  background:
     url(<%= asset_path 'inner-circle.png' %>) no-repeat center,
     linear-gradient(rgba($light-green, 0.5),rgba($turquoise, 0.5));

  background-size: 75%, 100%;
  @include box-shadow(rgba($black,.3) 2px 2px 10px);
  margin: 40px auto 100px;

  &:focus,&:active {
    @include box-shadow(rgba($black,.7) 2px 2px 10px);
  }
}

.landing .category-logo {
  img{
    width: 50%;
  }
  p{
    font-size: 2em;
    font-weight: bold;
  }
}

.landing-statement {

  h1.landing-title{
    font-size: 1.3em;
  }
}

.landing-title-highlight {
  color: $yellow;
}

.im-span {
  color: $light-green;
}

.in-span {
  color: $dark-orange;
}
.clickJoin{
  padding: $normal-pad;
}


// breadcrumbs
#breadcrumbs {
  padding: 0 $normal-pad;
  font-size: 0.8em;
  color: $dark-gray;
  border-top: 1px solid $light-gray;
  border-bottom: 1px solid $light-gray;
  text-transform: capitalize;
  em {
    position: relative;
    top: 1px;
    font-style: normal;
  }
}

// content-header
.content-header{
  text-align:left;

  p, h3{
    width: 80%;
    margin: 0 auto;
  }
  h3 {
    padding-bottom: $normal-pad;
  }
  p {
    color: $white;
    font-size: 0.9em;
  }

}
